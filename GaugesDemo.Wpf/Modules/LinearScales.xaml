                        <dxga:LinearScale.LabelOptions>
                            <dxga:LinearScaleLabelOptions Offset="-23"/>
                        </dxga:LinearScale.LabelOptions>
                        <dxga:LinearScale.RangeBars>
                            <dxga:LinearScaleRangeBar Value="{Binding Frequency16K}">
                                <dxga:LinearScaleRangeBar.Options>
